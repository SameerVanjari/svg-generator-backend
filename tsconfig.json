{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/types"],  // Tell TS where to find types
    "esModuleInterop": true,  // Allow default imports
    "module": "commonjs",     // Set the module system to 'commonjs' for compatibility with require()
    "moduleResolution": "node", 
    "strict": true,
    "target": "es6"
  },
  "include": ["src/**/*"]  // Ensure TypeScript checks all files under `src`
}
