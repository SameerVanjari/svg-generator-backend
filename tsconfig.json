{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/types/**/*"]
  },
  "include": ["api/**/*.ts", "src/**/*.ts", "src/types/**/*.ts"]
}
